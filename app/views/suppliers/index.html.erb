<p id="notice"><%= notice %></p>

<%= form_tag( suppliers_path, method: :get ) do %>
  <p>
    Filtrar por:
    <%= radio_button_tag 'search_type', 'name', true %>
    Nome
    <%= radio_button_tag 'search_type', 'account' %>
    Conta
    <%= text_field_tag 'search', nil, placeholder: 'Digite o texto...' %>
    <%= submit_tag "Filtrar" %>
  </p>
<% end %>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>CNPJ</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.cnpj %></td>
        <td><%= supplier.description %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_supplier_path %>
